<link rel="stylesheet" href="/css/admin.css">

<div class="admin-container">
    <header class="admin-header">
        <h1>Admin Dashboard</h1>
        <a href="/logout" class="btn btn-link">Logout</a>
    </header>


    <main class="admin-main">
        <section class="presentations-section">
            <div class="section-header">
                <h2>Presentations</h2>
                <button id="new-presentation-btn" class="btn btn-primary">
                    + New Presentation
                </button>
            </div>

            <div id="presentations-list" class="presentations-grid">
                <div class="loading">Loading presentations...</div>
            </div>
        </section>
    </main>
</div>

<!-- New Presentation Modal -->
<div id="new-presentation-modal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Create New Presentation</h3>
            <button class="modal-close">&times;</button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label for="presentation-id">ID (lowercase, hyphens only)</label>
                <input type="text" id="presentation-id" placeholder="my-presentation" pattern="[a-z0-9-]+" required>
            </div>
            <div class="form-group">
                <label for="presentation-title">Title</label>
                <input type="text" id="presentation-title" placeholder="My Presentation" required>
            </div>
            <div class="form-group">
                <label for="presentation-description">Description</label>
                <textarea id="presentation-description" placeholder="Brief description..." rows="3"></textarea>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeModal()">Cancel</button>
            <button id="create-btn" class="btn btn-primary">Create</button>
        </div>
    </div>
</div>

<!-- Edit Presentation Info Modal -->
<div id="edit-info-modal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Edit Presentation Info</h3>
            <button class="modal-close" onclick="admin.closeEditInfoModal()">&times;</button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label for="edit-presentation-id">ID (read-only)</label>
                <input type="text" id="edit-presentation-id" readonly disabled>
            </div>
            <div class="form-group">
                <label for="edit-presentation-title">Title</label>
                <input type="text" id="edit-presentation-title" placeholder="My Presentation" required>
            </div>
            <div class="form-group">
                <label for="edit-presentation-description">Description</label>
                <textarea id="edit-presentation-description" placeholder="Brief description..." rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="edit-presentation-theme">Theme</label>
                <input type="text" id="edit-presentation-theme" placeholder="light">
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="admin.closeEditInfoModal()">Cancel</button>
            <button id="save-info-btn" class="btn btn-primary">Save Changes</button>
        </div>
    </div>
</div>

<div id="toast" class="toast"></div>


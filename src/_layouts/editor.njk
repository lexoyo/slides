---
layout: base.njk
---
<link rel="stylesheet" href="/css/editor.css">

<div class="editor-container">
    <header class="editor-header">
        <h1>Slide Editor</h1>
        <div class="editor-actions">
            <select id="theme-selector" class="theme-selector">
                <option value="minimalist">Minimalist</option>
                <option value="dark">Dark</option>
            </select>
            <button id="save-btn" class="btn btn-primary">Save</button>
            <button id="preview-btn" class="btn btn-secondary">Toggle Preview</button>
            <a href="/" class="btn btn-secondary" target="_blank">View Slides</a>
            <a href="/presenter" class="btn btn-secondary">Presenter</a>
            <a href="/logout" class="btn btn-link">Logout</a>
        </div>
    </header>

    <div class="editor-main">
        <div class="editor-pane">
            <div class="pane-header">
                <h2>Markdown Editor</h2>
                <div class="header-actions">
                    <label for="image-upload" class="btn-upload" title="Upload image">
                        ðŸ“Ž Upload Image
                    </label>
                    <input type="file" id="image-upload" accept="image/*" style="display: none;">
                    <span class="help-text">Use --- to separate slides</span>
                </div>
            </div>
            <div class="editor-wrapper">
                <textarea id="markdown-editor" class="markdown-textarea"></textarea>
                <div id="upload-overlay" class="upload-overlay">
                    <div class="upload-message">
                        ðŸ“· Drop image here to upload
                    </div>
                </div>
            </div>
        </div>

        <div class="preview-pane" id="preview-pane">
            <div class="pane-header">
                <h2>Live Preview</h2>
                <button id="refresh-preview-btn" class="btn btn-secondary">Refresh Preview</button>
            </div>
            <iframe id="preview-iframe" class="preview-iframe"></iframe>
        </div>
    </div>

    <div class="editor-help">
        <details>
            <summary>Markdown Help</summary>
            <div class="help-content">
                <h3>Basic Syntax</h3>
                <ul>
                    <li><code># Heading 1</code> - Main title</li>
                    <li><code>## Heading 2</code> - Subtitle</li>
                    <li><code>**bold**</code> - Bold text</li>
                    <li><code>*italic*</code> - Italic text</li>
                    <li><code>- item</code> - List item</li>
                    <li><code>---</code> - Slide separator</li>
                </ul>
                <h3>Presenter Notes</h3>
                <pre><code>&lt;!-- notes
Your private notes here
--&gt;</code></pre>
            </div>
        </details>
    </div>

    <div id="toast" class="toast"></div>
</div>

<script src="/js/editor.js"></script>
